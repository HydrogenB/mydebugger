{
  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(api/.*)", "destination": "/api/$1" },
    { "source": "/(.*)\\.(.+)", "destination": "/$1.$2" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "buildCommand": "node node_modules/typescript/lib/tsc.js --noEmit && node node_modules/vite/bin/vite.js build",
  "installCommand": "npm install",
  "framework": "vite",
  "headers": [
    {
      "source": "/(assets|_next|static)/(.*)\\.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/assets/(.*)\\.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}